@model UserUpdateViewModel
@{
    ViewBag.Title = "修改用户";
}

<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Id" value="@Model.Id" readonly="readonly">
            <span class="invalid" asp-validation-for="Id"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName" value="@Model.UserName">
            <span class="invalid" asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="invalid" asp-validation-summary="ModelOnly"></div>

    <button type="submit" class="btn btn-primary">保存</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>

<hr>
<ul class="list-group" >
    <li class="list-group-item active">用户的Claims</li>
    @foreach (var item in Model.Claims)
    {
        <li class="list-group-item">@item</li>
    }
</ul>
<br>
<a asp-action="ManagerClaims" asp-route-id="@Model.Id" class="btn btn-primary btn-block">管理用户的Claims</a>