@using Microsoft.AspNetCore.Identity;
@model IEnumerable<ApplicationUser>;

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">用户名</th>
            <th scope="col"></th>
            <th scope="col">操作</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post">
                        <button type="button" class="btn btn-primary" 
                            onclick="javascript:window.location.href='/User/UpdateUser/@item.Id'">修改</button>
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('确认删除?')">删除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddUser" class="btn btn-primary btn-block">添加用户</a>