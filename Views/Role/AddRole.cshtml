@model RoleAddViewModel
@{
    ViewBag.Title = "添加角色";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="from-group row">
        <label asp-for="RoleName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RoleName">
            <span class="invalid" asp-validation-for="RoleName"></span>
        </div>
    </div>
    <hr>
    <div class="invalid" asp-validation-summary="ModelOnly"></div>
    <br>
    <button type="submit" class="btn btn-primary btn-block">提交</button>
    <br>
    <a asp-action="Index" class="btn btn-secondary btn-block">返回列表</a>
</form>