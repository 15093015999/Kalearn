@{
    ViewData["Title"] = "查看试卷";
}
<div class="list-group">
  <a class="list-group-item active">
   试卷信息
  </a>
  <a class="list-group-item">标题：@ViewBag.Paper.title</a>
  <a href="#" class="list-group-item">命题人：@ViewBag.Paper.teacherUserName</a>
  <a class="list-group-item">试卷总分值: @ViewBag.Paper.subtotal</a>
  <a class="list-group-item">试卷题目</a>
  @foreach (var item in ViewBag.TopicIdList)
  {
    <a class="list-group-item" asp-controller="Topic" asp-action="Detail" asp-route-id="@item.id">@item.id . @item.title</a>
  }
</div>
<a asp-action="Index" class="btn btn-primary btn-lg active btn-block" role="button" aria-pressed="true">返回</a>